generator client {
  provider = "prisma-client-js"
  //  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  u_id        Int      @id @default(autoincrement())
  u_full_name String
  u_username  String   @unique
  u_password  String   @db.Text
  u_email     String   @unique
  u_tel       String
  u_profile   String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Products {
  p_id      Int      @id @default(autoincrement())
  p_name    String
  p_price   Float
  p_amount  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
